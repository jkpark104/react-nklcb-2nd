{
  "private": true,
  "type": "module",
  "name": "preparing-for-react",
  "version": "0.0.1",
  "scripts": {
    "start": "cross-env OPEN='/client/public' npm run dev",
    "dev": "cross-env PORT=8080 nodemon server/index.mjs",
    "lint": "eslint ./client --ignore-path .gitignore",
    "watch": "run-p watch:**",
    "watch:lint": "esw ./client --watch --color --ignore-path .gitignore",
    "format": "prettier --write ./client --ignore-path .gitignore",
    "watch:format": "onchange ./client -- npm run format {{changed}}",
    "test": "jest --watchAll"
  },
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@types/jest": "^27.0.3",
    "@types/live-server": "^1.2.1",
    "@types/node": "^16.11.10",
    "babel-jest": "^27.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-watch": "^8.0.0",
    "jest": "^27.3.1",
    "live-server": "^1.2.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.5.0"
  }
}
